<partial name="./_AdminHeader"/>
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
@model LidkopingsZoo.Models.ViewModels.AdminPanelViewModel
<h1 style="text-align: center;">Admin Panel</h1>
<br>
<h3>Species overview</h3>
<form>
        @{
            int i = 0;
        }
        @foreach (var Species in @Model.Species[0])
        {
            i++;
        }
    <labal>Number of Species in park: @i</labal><br>
    @{
        i = -1;
        int t = 0;
        int counter = 0;
    }
    <br>
    <h3>Animal overview</h3>
        @foreach (var Animal in @Model.Animals[t])
        {
            int j = 0;
            int s = 4;
            @foreach (var type in Model.Animals[t][j])
            {
                try
                {
                    if (@Model.Animals[t][j] != null)
                    {
                        <ul>
                            <li>
                                <p>@Model.Animals[t][j]</p>
                                <p>(@Model.Animals[t][s])</p>
                            </li>
                        </ul>
                        j = j + 5;
                        s = s + 5;
                        counter++;
                    }
                }
                catch (Exception ex)
                {

                }
            }
            t++;
            if (t == 3)
            {
                break;
            }
        }
    <labal>Number of Animals in park: @counter</labal><br>

    
</form>