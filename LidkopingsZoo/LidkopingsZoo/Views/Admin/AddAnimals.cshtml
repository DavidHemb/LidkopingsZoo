<partial name="./_AdminHeader"/>
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
<form method="post" asp-controller="Admin" asp-action="AddAnimalMethod">
    <label for="name">Name</label><br>
    <input type="text" id="name" name="name"><br>

    <label for="desc">Description</label><br>
    <input type="text" id="desc" name="desc"><br>

    <label for="age">Age</label><br>
    <input type="number" id="age" name="age"><br>

    <label for="">Species</label><br>
    <select class="form-select" aria-label="Pick species" name="species" id="species-dropdown">
        
        <option selected>Pick species</option>
            @{int i = 0;}
            @foreach (var Species in ViewBag.Species[0])
            {
                <option value="@ViewBag.Species[0][i]">@ViewBag.Species[0][i]</option>
                i++;
            }
    </select><br>

    <button type="submit" class="btn btn-primary">Add Animal</button>
</form>